<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title %></title>

  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <div id="top"></div>
  <%- include('partials/header') %>

  <div class="dashboard-page">
    <div class="dashboard-header">
      <div class="dashboard-left">
        <h2><%= name %>'s Dashboard</h2>
        <nav class="dashboard-nav" aria-label="Dashboard navigation">
          <a href="#add-expense-section">Add Expense</a>
          <a href="#expenses-section">Your Expenses</a>
        </nav>
      </div>
      <a href="/logout" class="btn-logout">Logout</a>
    </div>

    <div id="add-expense-section" class="dashboard-add-expense">
      <% if (success && success.length) { %>
        <div class="alert alert-success"><%= success[0] %></div>
      <% } %>
      <% if (error && error.length) { %>
        <div class="alert alert-error"><%= error[0] %></div>
      <% } %>

      <h3>Add Expense</h3>
      <form action="/expenses/add" method="POST">
        <input type="number" step="0.01" name="amount" placeholder="Amount" required />
        <input type="text" name="category" placeholder="Category" required />
        <input type="text" name="description" placeholder="Description" />
        <input type="date" name="date" required />
        <button type="submit">Add Expense</button>
      </form>
    </div>

    <div id="expenses-section" class="dashboard-expenses">
      <h3>Your Expenses</h3>
      <div class="table-container">
        <table>
          <thead>
            <tr>
              <th>Amount</th>
              <th>Category</th>
              <th>Description</th>
              <th>Date</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
          <% if (expenses && expenses.length > 0) { %>
            <% expenses.forEach(expense => { %>
              <tr>
                <td><%= Number(expense.amount).toFixed(2) %></td>
                <td><%= expense.category %></td>
                <td><%= expense.description || '—' %></td>
                <td>
                  <% if (expense.date) { %>
                    <%= new Date(expense.date).toISOString().split('T')[0] %>
                  <% } else { %>
                    N/A
                  <% } %>
                </td>
                <td>
                  <form action="/expenses/delete/<%= expense.id %>" method="POST">
                    <button type="submit">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="5">No expenses yet</td>
            </tr>
          <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="back-to-top-container">
      <a href="#top" class="back-to-top">↑ Back to Top</a>
    </div>
  </div>

  <%- include('partials/footer') %>
  <script src="/js/main.js" defer></script>
</body>
</html>